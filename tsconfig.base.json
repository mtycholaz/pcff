{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "strict": false,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@pcff/client": ["libs/client/src/index.ts"],
            "@pcff/data": ["libs/data/src/index.ts"],
            "@pcff/data/*": ["libs/data/src/lib/*"],
            "@pcff/shared": ["libs/shared/src/index.ts"],
            "@pcff/shared/*": ["libs/shared/src/lib/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
